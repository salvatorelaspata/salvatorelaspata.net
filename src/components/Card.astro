---
interface Props {
    title: string;
    body: string;
    bgColorIcon: string;
    textColorIcon: string;
}

const { title, body, bgColorIcon, textColorIcon } = Astro.props;
---

<div class='h-full rounded bg-gray-800 p-4'>
    <div class='flex justify-start items-center'>
        <div
            class={`w-10 h-10 inline-flex items-center justify-center rounded-full ${bgColorIcon} ${textColorIcon} mb-5 flex-shrink-0 p-2`}
        >
            <slot name='svg-icon' />
        </div>
        <h2
            class={`text-xl h-full title-font font-medium ${textColorIcon} ml-5 mb-5 h-12`}
        >
            {title}
        </h2>
    </div>
    <div class='flex-grow'>
        <p class={`leading-relaxed text-sm text-justify ${textColorIcon}`}>
            {body}
        </p>
    </div>
</div>
