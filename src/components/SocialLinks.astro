---
type item = {
  url: string;
  title: string;
  img: string;
};
interface Props {
  socials: {
    github: item;
    gmail: item;
    linkedin: item;
  };
}
const { socials } = Astro.props;
---

<div class="w-full flex flex-row justify-center gap-4">
  {
    Object.entries(socials).map(([key, { url, img }]) => (
      <a
        href={url}
        title={`${key} - Salvatore La Spata`}
        target="_blank"
        rel="noopener noreferrer"
        class="flex flex-col items-center w-16 h-16 justify-center
          border-border border-2
          active:bg-palette1 
          transition-all
          hover:translate-x-[-4px]
          hover:translate-y-[-4px]
          bg-palette1 
          hover:bg-palette5
          hover:shadow-palette1
          hover:shadow-[4px_4px_0px_rgba(0,0,0,1)]"
      >
        <img class="size-10" src={img} alt={`${key} social link`} />
      </a>
    ))
  }
</div>
