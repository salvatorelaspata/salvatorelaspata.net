    <Skills bgColor='bg-gray-500 dark:bg-gray-600' textColor='text-white dark:text-white' />
    <Technologies bgColor='bg-gray-600 dark:bg-gray-500' textColor='text-white dark:text-white' />
    <Project bgColor='bg-gray-700 dark:bg-gray-400' textColor='text-white dark:text-white' />
    <Experiences bgColor='bg-gray-800 dark:bg-gray-300' textColor='text-white dark:text-white' /> 
