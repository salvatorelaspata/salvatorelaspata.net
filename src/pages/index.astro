---
import Layout from '../layouts/Layout.astro';
import Main from '../landingpage/Main.astro';
import Skills from '../landingpage/Skills.astro';
import About from '../landingpage/About.astro';
import Project from '../landingpage/Project.astro';
import Experiences from '../landingpage/Experiences.astro';
import Technologies from '../landingpage/Technologies.astro';
import Footer from '../landingpage/Footer.astro';
---

<Layout title='salvatorelaspata.net'>
    <Main bgColor='bg-gradient-to-b from-gray-300 to-gray-400 dark:bg-gradient-to-b dark:from-palette1 dark:to-palette2' 
        textColor='text-gray-800 dark:text-white' />
    <About bgColor='bg-gradient-to-b from-gray-400 to-gray-500 dark:bg-gradient-to-b dark:from-palette2 dark:to-palette3' 
        textColor='text-white dark:text-white' />
    <Skills bgColor='bg-gradient-to-b from-gray-500 to-gray-600 dark:bg-gradient-to-b dark:from-palette3 dark:to-palette4' 
        textColor='text-white dark:text-white' />
    <Technologies bgColor='bg-gradient-to-b from-gray-600 to-gray-700 dark:bg-gradient-to-b dark:from-palette4 dark:to-palette5' 
        textColor='text-white dark:text-white' />
    <Project bgColor='bg-gradient-to-b from-gray-700 to-gray-800 dark:bg-gradient-to-b dark:from-palette5 dark:to-palette1' 
        textColor='text-white dark:text-white' />
    <Experiences bgColor='bg-gradient-to-b from-gray-800 to-gray-800 dark:bg-gradient-to-b dark:from-palette1 dark:to-palette1' 
        textColor='text-white dark:text-white' />
    <Footer />
</Layout>
