---
import Layout from '../layouts/Layout.astro';
import Main from '../landingpage/Main.astro';
import Skills from '../landingpage/Skills.astro';
import About from '../landingpage/About.astro';
import Project from '../landingpage/Project.astro';
import Experiences from '../landingpage/Experiences.astro';
import Technologies from '../landingpage/Technologies.astro';

import '../styles/utils.css';

import Header from '../components/ui/Header.astro';
import Footer from '../components/ui/Footer.astro';
