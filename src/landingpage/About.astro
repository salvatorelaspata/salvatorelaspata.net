---
import HeaderSection from "../layouts/HeaderSection.astro";
import AboutCard from "../components/AboutCard.astro";
import Chip from "../components/Chip.astro";

const yearsInRome = new Date().getFullYear() - 2016;
const yearsOfExperience = new Date().getFullYear() - 2014;

const icons = {
    location: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>`,
    code: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"></path>`,
    briefcase: `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>`,
};
---

<section id="about" class="my-8 max-w-6xl mx-auto px-5">
    <HeaderSection title="Chi Sono" />
    <div class="fade-in mx-5 lg:mx-20">
        <p
            class="text-center text-lg lg:text-xl mb-10 max-w-3xl mx-auto opacity-80"
        >
            Full Stack Developer con {yearsOfExperience}+ anni di esperienza,
            specializzato in architetture enterprise SAP e sviluppo web moderno.
        </p>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8">
            <AboutCard title="Origini" icon={icons.location}>
                <p slot="content" class="opacity-80 leading-relaxed">
                    Siciliano di nascita, romano d'adozione da {yearsInRome} anni.
                    Porto con me la determinazione del Sud e l'energia della Capitale.
                </p>
                <div slot="footer" class="flex justify-center mt-4">
                    <img
                        src="sicily.svg"
                        alt="Sicilia"
                        class="w-16 h-16 opacity-60 group-hover:opacity-100 transition-opacity"
                    />
                </div>
            </AboutCard>

            <AboutCard title="Tech Stack" icon={icons.code}>
                <p slot="content" class="opacity-80 leading-relaxed">
                    Background Java, oggi specializzato in ecosistema <span
                        class="text-link font-medium">SAP BTP</span
                    >. Nei progetti personali esploro <span
                        class="text-link font-medium">React</span
                    >,
                    <span class="text-link font-medium">Node.js</span> e <span
                        class="text-link font-medium">TypeScript</span
                    >.
                </p>
                <div slot="footer" class="flex flex-wrap gap-2">
                    <Chip content="SAP" />
                    <Chip content="React" />
                    <Chip content="Node.js" />
                    <Chip content="TypeScript" />
                </div>
            </AboutCard>

            <AboutCard title="Ruolo Attuale" icon={icons.briefcase}>
                <p slot="content" class="opacity-80 leading-relaxed">
                    <span class="font-medium text-link"
                        >SAP BTP Practice Leader</span
                    > presso GOTONEXT SRL. Guido un team di <span
                        class="text-link font-medium">16 professionisti</span
                    >
                    nella progettazione di architetture cloud e on-premise.
                </p>
                <div
                    slot="footer"
                    class="flex items-center gap-2 text-sm opacity-60 justify-center h-full"
                >
                    <svg
                        class="w-4 h-4"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                        ></path>
                    </svg>
                    <span>Team Leadership & Architecture</span>
                </div>
            </AboutCard>
        </div>
    </div>
</section>
