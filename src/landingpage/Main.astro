---
import SectionLayout from "../layouts/SectionLayout.astro";
import SocialLinks from "../components/SocialLinks.astro";
---

<script>
  import gsap from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { randomAnimation } from "../utils/animation";
  gsap.registerPlugin(ScrollTrigger);

  // animate text on load
  const gHello = document.querySelector(".g-hello");
  const gIm = document.querySelector(".g-im");
  const gNome = document.querySelector(".g-nome");
  const gCognome = document.querySelector(".g-cognome");
  const gRole = document.querySelector(".g-role");
  const gCompany = document.querySelector(".g-company");
  const gSocial = document.querySelector(".g-social");
  const sticker = document.querySelector(".sticker");

  const iHello = document.querySelector(".i-hello");

  const container = document.querySelector("#main");

  const tl = gsap.timeline({
    scrollTrigger: {
      trigger: container,
      toggleActions: "restart pause resume pause",
    },
  });
  if (container) {
    const random = randomAnimation(tl);

    gHello && random(gHello);
    iHello && random(iHello);
    gIm && random(gIm);
    gNome && random(gNome);
    gCognome && random(gCognome);
    gRole && random(gRole);
    gCompany && random(gCompany);
    gSocial && random(gSocial);
  }
  gsap.from(sticker, {
    scrollTrigger: {
      trigger: sticker,
      start: "bottom center",
      end: "bottom center",
      toggleActions: "play none none none",
    },
    opacity: 0,
    duration: 1,
  });

  // Animazione padding e border-radius allo scroll
  const innerContainer = document.querySelector("#main > div");
  if (container && innerContainer) {
    gsap.to(container, {
      padding: "0px",
      scrollTrigger: {
        trigger: container,
        start: "top top",
        end: "30% top",
        scrub: true,
      },
    });
    gsap.to(innerContainer, {
      borderRadius: "0px",
      scrollTrigger: {
        trigger: container,
        start: "top top",
        end: "30% top",
        scrub: true,
      },
    });
  }
</script>

